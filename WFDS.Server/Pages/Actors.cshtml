@page
@model WFDS.Server.Pages.Actors

@{
    ViewData["Title"] = "Actors";
    Layout = "_Layout";
}


<h1 class="ui header">Actors</h1>
<form method="post" class="ui relaxed grid one column row">
    @Html.AntiForgeryToken()

    <div class="column">
        <h2>Owned</h2>
        Count: @Model.GetOwnedActorCount()

        <table class="ui celled table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>DecayTimer</th>
                <th>CreatedAt</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var actor in Model.GetOwnedActors())
            {
                <tr>
                    <td>@actor.ActorId</td>
                    <td>@actor.Type.Name</td>
                    <td>@actor.DecayTimer</td>
                    <td>@actor.CreateTime</td>
                    <td>
                        <button type="submit" class="ui tiny button red" asp-page-handler="delete"
                                asp-route-id="@actor.ActorId">delete
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="column">
        <h2>All</h2>
        Count: @Model.GetAllActorCount()

        <table class="ui celled table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>CreatorId</th>
                <th>DecayTimer</th>
                <th>CreatedAt</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var actor in Model.GetAllActors())
            {
                <tr>
                    <td>@actor.ActorId</td>
                    <td>@actor.Type.Name</td>
                    <td>@actor.CreatorId</td>
                    <td>@actor.DecayTimer</td>
                    <td>@actor.CreateTime</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <script>
        alert('@Model.Message');
    </script>
}