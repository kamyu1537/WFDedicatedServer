@page
@model WFDS.Server.Pages.Server.Index

@{
    ViewBag.Title = "Server";
    Layout = "_ServerLayout";
}

<h1>Graceful Shutdown</h1>
<form method="post" onsubmit="return confirm('Are you sure you want to shutdown the server?')">
    @Html.AntiForgeryToken()
    <button type="submit" class="ui button red" asp-page-handler="shutdown">Graceful Shutdown</button>
</form>
